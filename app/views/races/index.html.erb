<p id="notice"><%= notice %></p>

<h1>Races</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Championship</th>
      <th>Circuit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @races.each do |race| %>
      <tr>
        <td><%= race.name %></td>
        <td><%= race.championship.championship %></td>
        <td><%= race.circuit.name %></td>
        <td><%= link_to race.laps.count, laps_path(:race_id => race.id) %>
        <td><%= link_to 'Show', race %></td>
        <td><%= link_to 'Edit', edit_race_path(race) %></td>
        <td><%= link_to 'Destroy', race, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @races %>
<br>

<%= link_to 'New Race', new_race_path %>
