<p id="notice"><%= notice %></p>

<h1>Sujetos</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Document number</th>
      <th>Birthday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sujetos.each do |sujeto| %>
      <tr>
        <td><%= sujeto.first_name %></td>
        <td><%= sujeto.last_name %></td>
        <td><%= sujeto.document_number %></td>
        <td><%= sujeto.birthday %></td>
        <td><%= link_to 'Show', sujeto if can? :show, Sujeto %></td>
        <td><%= link_to 'Edit', edit_sujeto_path(sujeto) %></td>
        <td><%= link_to 'Destroy', sujeto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @sujetos %>
<br>

<%= link_to 'New Sujeto', new_sujeto_path %>
